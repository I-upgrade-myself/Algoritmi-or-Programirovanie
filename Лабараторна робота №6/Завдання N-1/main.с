#include <stdio.h>

int main() {
    int n, m;
    printf("Введіть кількість рядків матриці (n): ");
    scanf("%d", &n);
    printf("Введіть кількість стовпців матриці (m): ");
    scanf("%d", &m);

    // Ініціалізуємо матрицю A з введеними розмірами
    int A[n][m];

    // Заповнюємо матрицю A 
    printf("Введіть елементи матриці A розмірності %d x %d:\n", n, m);
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < m; j++) {
            printf("A[%d][%d]: ", i, j);
            scanf("%d", &A[i][j]);
        }
    }

    // Знаходимо максимальний та мінімальний елементи матриці
    int max = A[0][0];
    int min = A[0][0];
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < m; j++) {
            if (A[i][j] > max) {
                max = A[i][j];
            }
            if (A[i][j] < min) {
                min = A[i][j];
            }
        }
    }

    // Обчислюємо середнє арифметичне максимального та мінімального елементів
      float avg = (float)(max + min) / 2;

    printf("Максимальний елемент матриці: %d\n", max);
    printf("Мінімальний елемент матриці: %d\n", min);
    printf("Середнє арифметичне максимального та мінімального елементів: %.2f\n", avg);

    return 0;
}
